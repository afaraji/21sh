NAME = libft.a

SRC = ./ft_bzero.c ./ft_isalnum.c ./ft_isalpha.c ./ft_isdigit.c		\
	./ft_memalloc.c ./ft_putstr.c ./ft_strcat.c ./ft_strchr.c ./ft_strcmp.c	\
	./ft_strcpy.c ./ft_strdup.c ./ft_strjoin.c ./ft_strlen.c ./ft_strnew.c	\
	./ft_strsplit.c ./ft_strsub.c

INCLDS = ./libft.h

OBJECTS = $(SRC:.c=.o) 

all: $(NAME)

$(NAME): $(OBJECTS)
	gcc -Wall -Wextra -Werror -c $(SRC) -I $(INCLDS)
	ar rc $(NAME) $(OBJECTS)
	ranlib $(NAME)

clean:
	/bin/rm -f $(OBJECTS)

fclean: clean
	/bin/rm -f $(NAME)

re: fclean all
